{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "routescope: build workspaces",
      "type": "shell",
      "command": "npm run build --workspaces",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "routescope: test workspaces",
      "type": "shell",
      "command": "npm run test --workspaces",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test"
    }
  ]
}
